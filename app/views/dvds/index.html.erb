<h1>Listing dvds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Band</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.title %></td>
        <td><%= dvd.band %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

